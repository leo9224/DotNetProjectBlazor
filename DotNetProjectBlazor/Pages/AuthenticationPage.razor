@page "/"

@inject NavigationManager NavigationManager
@inject ILocalStorageService LocalStorage;

<div id="loginForm">
	<div id="headerContainer">
		<div>
			<img src="/favicon.png" alt="Logo" id="logo" />
		</div>
		<div>
			<h1>Authentication</h1>
		</div>
		<div></div>
	</div>

	<form>
		<input type="text" id="email" name="email" placeholder="Email" @oninput="OnEmailChange">

		<input type="password" id="password" name="password" placeholder="Password" @bind-value="Password" @oninput="OnPasswordChange">

		<label id="invalidLabel" hidden="@IsValidCredentials">Invalid email or password !</label>

		<button type="submit" disabled="@IsInvalidEmailAndPassword" @onclick="Authenticate" @onclick:preventDefault="true">Login</button>
	</form>
</div>
