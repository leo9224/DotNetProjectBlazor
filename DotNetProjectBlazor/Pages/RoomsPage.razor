@page "/{UserId:int}/{ParkId:int}"

@inject NavigationManager NavigationManager
@inject ILocalStorageService LocalStorage;

<div id="roomsPage">
    <div id="headerContainer">
        <h1>Rooms</h1>
        <a href="@UserId/@ParkId/roomForm/-1"><button class="roomActionButton">New</button></a>
    </div>

    @if (Rooms.Count != 0)
    {
        <div id="roomButtonsContainer">
            @foreach (var Room in Rooms)
            {
                @if (Room.is_enabled)
                {
                    <div class="roomButtons">
                        <a href="/@UserId/@ParkId/@Room.id"><button class="roomButton">@Room.name</button></a>
                        <a href="@UserId/@ParkId/roomForm/@Room.id"><button class="roomActionButton">Update</button></a>
                        <button class="roomActionButton" @onclick="() => DeleteRoom(Room.id)">Delete</button>
                    </div>
                }
            }
        </div>
    }
    else
    {
        <p>No room</p>
    }
</div>
