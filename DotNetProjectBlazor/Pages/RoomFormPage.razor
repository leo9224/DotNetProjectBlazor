@page "/{UserId:int}/{ParkId:int}/roomForm/{RoomId:int}"

@inject NavigationManager NavigationManager
@inject ILocalStorageService LocalStorage;

<div id="roomForm">
	<div id="headerContainer">
		<div>
			<img src="/favicon.png" alt="Logo" id="logo" />
		</div>
		<div>
			<h1>Room form</h1>
		</div>
		<div></div>
	</div>

	<form>
		<input type="text" id="name" name="name" placeholder="Name" @bind-value="Room.name">

		<button type="submit" @onclick="SubmitForm" @onclick:preventDefault="true">Submit</button>
	</form>
</div>
